  <script src="/javascript/genre.js"></script>
<script>
function decon(){
    $.ajax({
       url : '/logout',
       type : 'POST',
       dataType : 'html',
success:function(res){
if (res && res==="vous souhaitez vous connecter") {
window.location="/login";
} else if (res && res==="vous etes a present deconnecte") {
window.location="/";
}
}});


};


</script>

</body>
</html>
